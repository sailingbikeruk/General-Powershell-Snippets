Import-Module activedirectory #
$domains = Get-ADForest | select -ExpandProperty domains
$Servers = @()

foreach($domain in $domains)
{
    $servers += Get-ADComputer -Filter {OperatingSystem -Like "*Server*"} -Server $domain -Property * | Select Name, DNSHostName
    Write-host -NoNewline "." # just adds a dot so you know it is still working.
}
$servers | export-csv C:\scripts\IE-ESCStatus\forest_server_list.txt
